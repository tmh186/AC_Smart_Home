                        <Image url="@../open.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="GarageDoorAclosed" fitHeight="17.0" fitWidth="25.0" layoutX="488.0" layoutY="154.0" pickOnBounds="true" preserveRatio="true">
